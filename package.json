{
  "name": "daymatter",
  "version": "1.0",
  "description": "倒数日",
  "author": "[小鱼yuzifu](https://www.bandbbs.cn/members/969142/)",
  "email": "yzf@yzf.moe",
  "license": "GPLv3",
  "engines": {
    "node": ">=8.10"
  },
  "scripts": {
    "start": "aiot server --watch --enable-custom-component true --enable-protobuf true",
    "build": "aiot build --enable-custom-component --enable-jsc --enable-protobuf",
    "release": "aiot release --enable-custom-component --enable-jsc --enable-protobuf",
    "watch": "aiot watch --open-nuttx",
    "lint": "eslint --format codeframe --fix --ext .ux,.js src/"
  },
  "lint-staged": {
    "*.{ux,js}": [
      "prettier --write",
      "eslint --format codeframe --fix",
      "git add"
    ],
    "*.{less,css}": [
      "prettier --write",
      "stylelint --fix --custom-syntax postcss-less",
      "git add"
    ]
  },
  "devDependencies": {
    "@aiot-toolkit/velasim": "^0.1.23",
    "aiot-toolkit": "^1.1.3",
    "@aiot-toolkit/jsc": "^1.0.3",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.8.0",
    "eslint-plugin-ux": "^0.0.4"
  }
}
